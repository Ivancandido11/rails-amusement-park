<div>
  <%= form_for user do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %><br><br>
    
    <%= form.label :password %>
    <%= form.text_field :password %><br><br>

    <%= form.label :nausea %>
    <%= form.number_field :nausea %><br><br>

    <%= form.label :happiness %>
    <%= form.number_field :happiness %><br><br>

    <%= form.label :tickets %>
    <%= form.number_field :tickets %><br><br>

    <%= form.label :height %>
    <%= form.number_field :height %><br><br>

    <%= form.label :admin %>
    <%= form.check_box :admin %><br><br>

    <%= form.submit %>
  <% end %>
</div>
