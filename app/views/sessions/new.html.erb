<h1>Login</h1><br><br>

<div>
  <%= form_tag("/login", method: :post) do %>
    <%= select_tag "user_name", options_from_collection_for_select(@users, "name", "name"), include_blank: "Select User" %><br><br>

    <%= label_tag "Password" %>
    <%= text_field_tag :password %><br><br>

    <%= submit_tag "Sign In" %>
  <% end %>
